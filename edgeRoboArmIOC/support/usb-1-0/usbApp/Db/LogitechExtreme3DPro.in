BUTTON3_PRESSED     [4]          -> Bool      /0x04
BUTTON4_PRESSED     [4]          -> Bool      /0x08
BUTTON5_PRESSED     [4]          -> Bool      /0x10
BUTTON6_PRESSED     [4]          -> Bool      /0x20
BUTTON7_PRESSED     [4]          -> Bool      /0x40
BUTTON8_PRESSED     [4]          -> Bool      /0x80

BUTTON9_PRESSED     [6]          -> Bool      /0x01
BUTTON10_PRESSED    [6]          -> Bool      /0x02
BUTTON11_PRESSED    [6]          -> Bool      /0x04
BUTTON12_PRESSED    [6]          -> Bool      /0x08
