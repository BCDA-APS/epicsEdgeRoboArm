#Logictech Extreme3D Pro Joystick	Vendor: 0x046D	Product: 0xC215

#Joystick
HORIZONTAL_STATE    [0, 1]       -> UInt16    /0x03FF
VERTICAL_STATE      [1, 2] >> 2  -> UInt16    /0x03FF
ROTATION_STATE		[3]          -> UInt8


#Toggles
HAT_STATE           [2]    >> 4  -> UInt8     /0x0F
SWITCH_STATE        [5]          -> UInt8


#Buttons
TRIGGER_PRESSED     [4]          ->	Bool      /0x01
